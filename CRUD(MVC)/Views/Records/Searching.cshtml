@model IEnumerable<CRUD_MVC_.Models.ViewModels.ListRecordsViewModels>

<h2>Busqueda</h2>

@using (Html.BeginForm("Search", "Records", FormMethod.Get))
{
    <div class="form-group">
        @Html.Label("Search by Name:")
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>
                    <a href="~/Records/Update/@oElement.Id" class="btn btn-default">Editar</a>
                    <a href="~/Records/Delete/@oElement.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="text-align:right">
    <a href="~/Records/Index" class="btn btn-primary">Volver</a>
</div>